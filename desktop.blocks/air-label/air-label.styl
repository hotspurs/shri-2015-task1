.air-label
  position : relative
  display : inline-block
  height : 30px
  width : 30px
  user-select : none
  cursor : pointer
  margin : 0
  margin-top : 40px

  &:before
    content : ''
    position : absolute
    top : 0
    left : 0
    right : 0
    bottom : 0
    background-color : #fff
  &:after
    background-repeat : no-repeat
    background-position : center
    background-size : contain
    width : 16px
    height : 16px
    display : block
    position : absolute
    left : 50%
    top : 50%
    margin : -8px 0 0 -8px

.air-label_type_arr
  margin-right : 10px
  &:after
    content : ''
    background-image : url('air-label-arr.svg')

.air-label_type_dep
  &:after
    content : ''
    background-image : url('air-label-dep.svg')
