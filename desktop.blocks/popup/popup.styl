.popup
  position : fixed
  top : 0
  bottom : 0
  left : 0
  right : 0
  z-index : 1000
  background-color : rgba(0,0,0, .4)
  opacity : 0
  visibility : hidden
  transition : all 0.5s ease
  text-align : center
  line-height : 100vh

  &:target
    visibility : visible
    opacity : 1

  &__overlay
    display : block
    position : absolute
    top : 0
    left : 0
    bottom : 0
    right : 0

  &__content
    position : relative
    display : inline-block
    text-align : left
    vertical-align : middle
    line-height : normal
    font-size : 16px
    padding : 40px
    background-color : #fff

  &__info
    margin-bottom : 20px
    &_align_center
      text-align : center

  &__heading
    display : inline-block
    vertical-align : top
    font-weight : bold
    min-width : 200px

  &__text
    display : inline-block
    vertical-align : top
    max-width : 200px

  &__image
    display : inline-block
    max-width : 150px
    height : 40px
    margin-right : 10px
    vertical-align : middle
    border : none


  &__close
    display : block
    position : absolute
    right : 10px
    top : 10px
    width : 20px
    padding-top : 2px
    color : #fff
    background-color : #607d8b
    text-align : center
    text-decoration : none

